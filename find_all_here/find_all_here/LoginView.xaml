<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="find_all_here.LoginView"
    BackgroundColor="{StaticResource bg-body}">
    <ContentPage.Content>
        <ScrollView>
            <Grid RowSpacing="{OnPlatform iOS=25,Android=18}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Row="2" HorizontalOptions="Center" Orientation="Vertical" Margin="0,0,0,10">
                    <Label
                        Text="Bienvenido de vuelta"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        FontSize="26"
                        Margin="0,0,0,5"
                        WidthRequest="300"
                        TextColor="{StaticResource lbl-primary}" />
                    <Label
                        Text="Inicia sesión en Find All Here"
                        TextColor="{StaticResource lbl-secondary}"
                        FontSize="15"
                        WidthRequest="300" />
                </StackLayout>

                <StackLayout Grid.Row="3"
                    HorizontalOptions="Center"
                    WidthRequest="{OnPlatform iOS=300,Android=300}"
                    Orientation="Vertical" >
                    <Label
                        Text="Usuario o correo electrónico"
                        FontSize="14"
                        TextColor="{StaticResource lbl-secondary}" />
                    <Frame
                        HasShadow="{OnPlatform Android=true,iOS=false}"
                        Padding="8,4,8,4"
                        CornerRadius="10"
                        BackgroundColor="{StaticResource bg-outline}">
                        <Entry
                            Keyboard="Email"
                            MaxLength="320"
                            Text="{Binding EmailTxt, Mode=TwoWay}"
                            IsEnabled="{Binding IsEnabledTxt}"
                            FontSize="14"
                            TextColor="{StaticResource lbl-primary}" />
                    </Frame>
                </StackLayout>

                <StackLayout Grid.Row="4"
                    HorizontalOptions="Center"
                    WidthRequest="300"
                    Orientation="Vertical" >
                    <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="0">
                        <Label
                            Text="Contraseña"
                            FontSize="14"
                            TextColor="{StaticResource lbl-secondary}"
                            VerticalOptions="Center"
                            WidthRequest="150" />
                        <Button
                            Text="¿Olvidaste tu contraseña?"
                            TextColor="{StaticResource lbl-secondary}"
                            FontSize="12"
                            WidthRequest="150"
                            HorizontalOptions="End"
                            BackgroundColor="{StaticResource bg-body}"
                            HeightRequest="30"
                            Padding="0"
                            IsEnabled="{Binding IsEnabledTxt}" />
                    </StackLayout> 
                    <Frame
                        HasShadow="{OnPlatform Android=true,iOS=false}"
                        Padding="8,4,8,4"
                        CornerRadius="10"
                        BackgroundColor="{StaticResource bg-outline}" >
                        <Entry
                            MaxLength="25"
                            IsPassword="True"
                            FontSize="14"
                            Text="{Binding PasswordTxt, Mode=TwoWay}"
                            IsEnabled="{Binding IsEnabledTxt}"
                            TextColor="{StaticResource lbl-primary}" />
                    </Frame>

                </StackLayout>


                <StackLayout Grid.Row="5" HorizontalOptions="Center" Padding="0">
                    <ActivityIndicator
                        IsRunning="{Binding IsRunningTxt}"
                        IsVisible="{Binding IsVisibleTxt}"
                        Color="Black"
                        Scale="0.8" />
                </StackLayout>
                <StackLayout Grid.Row="6" HorizontalOptions="Center" Orientation="Vertical" >
                    <Button
                        Text="Iniciar Sesión"
                        TextColor="{StaticResource btn-success}"
                        Background="{StaticResource btn-success-outline}"
                        Font="Montserrat-Medium.otf"
                        FontSize="14"
                        WidthRequest="300"
                        HeightRequest="50"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsEnabledTxt}" />
                    <Button
                        Text="Registrarse"
                        TextColor="{StaticResource lbl-secondary}"
                        FontSize="14"
                        BackgroundColor="{StaticResource bg-body}"
                        IsEnabled="{Binding IsEnabledTxt}"
                        Clicked="SignUp_Clicked" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>